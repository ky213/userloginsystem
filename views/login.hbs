<div class="row justify-content-center ">
    <div id="alert" class="col-12 alert alert-{{options.alert.color}} text-center">{{{options.alert.message}}}</div>
</div>
<div class="row justify-content-center align-items-center align-content-center flex-wrap-reverse " style="flex-grow:1">
    <div class="col-lg-3 col-md-4 col-sm-5 mb-5">
        <button id="facebook" type="button" class="btn btn-primary btn-block">
            <i class="fa fa-facebook px-2"></i>Facebook</button>
        <button id="google" type="button" class="btn btn-danger btn-block">
            <i class="fa fa-google px-2"></i>Google</button>
        <button id="twitter" type="button" class="btn btn-dark btn-block">
            <i class="fa fa-twitter px-2"></i>Twitter</button>
    </div>
    <div class="col-sm-1">
        <div class="separationBar d-sm-flex flex-sm-column  align-items-center">
            <div class="bar"></div>
            <div class="or">
                <h2 class="">or</h2>
            </div>
            <div class="bar"></div>
        </div>
    </div>
    <div class="col-lg-3 col-md-4 col-sm-5">
        <form id="loginForm" action="/login" method="post" novalidate>
            <div class="form-group">
                <label for="email">Email </label>
                <input id="email" name="email" type="email" class="form-control" placeholder="Enter email" pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
                    required>
                <div class='invalid-feedback alert alert-danger'></div>
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input id="password" name="password" type="password" class="form-control" placeholder="Password" autocomplete required>
                <div class='invalid-feedback alert alert-danger'></div>
            </div>
            <div class="form-check">
                <label class="custom-control custom-checkbox">
                    <input name="rememberMe" type="checkbox" class="custom-control-input" value="off">
                    <span class="custom-control-indicator"></span>
                    <span class="custom-control-description">Remember me</span>
                </label>
            </div>
            <button type="submit" class="btn btn-gray btn-block">
                Submit
            </button>
            <div class="py-2">
                <a id="passwordReset" href="/passwordreset" class="">forgot password ?</a>
            </div>
        </form>
    </div>
    <div class="w-100"></div>
    <div id="loginAlert" class="text-center   w-50 mt-2 mx-auto"></div>
</div>
<script src="formValidation.js"></script>

<h1 class="display-1">{{vars.message}}
</h1>